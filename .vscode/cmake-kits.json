[
    {
        "name": "zig x86_64-windows-gnu",
        "toolchainFile": "${workspaceFolder}/cmake/zig.toolchain.x86_64-windows-gnu"
    },
    {
        "name": "zig x86_64-linux-gnu",
        "toolchainFile": "${workspaceFolder}/cmake/zig.toolchain.x86_64-linux-gnu"
    },
    {
        "name": "zig aarch64-linux-gnu",
        "toolchainFile": "${workspaceFolder}/cmake/zig.toolchain.aarch64-linux-gnu"
    },
    {
        "name": "zig arm-linux-gnueabihf",
        "toolchainFile": "${workspaceFolder}/cmake/zig.toolchain.arm-linux-gnueabihf"
    },
    {
        "name": "miyoomini",
        "toolchainFile": "${env:HOME}/miyoomini-toolchain/miyoomini-toolchain.cmake",
        "cmakeSettings": {
            "WITH_ACLE" : "OFF"
        }
    },
    {
        "name": "android-armeabi-v7a",
        "toolchainFile": "/etc/alternatives/android-ndk/build/cmake/android.toolchain.cmake",
        "cmakeSettings": {
            "ANDROID_PLATFORM" : "18",
            "ANDROID_ABI": "armeabi-v7a",
            "CMAKE_WARN_DEPRECATED": "false"
        }
    },
    {
        "name": "android-arm64-v8a",
        "toolchainFile": "/etc/alternatives/android-ndk/build/cmake/android.toolchain.cmake",
        "cmakeSettings": {
            "ANDROID_PLATFORM" : "18",
            "ANDROID_ABI": "arm64-v8a",
            "CMAKE_WARN_DEPRECATED": "false"
        }
    }
]