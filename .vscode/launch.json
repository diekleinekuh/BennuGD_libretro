    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "retroarch",
            "args": ["-L","${workspaceFolder}/build/lib/libbennugd_libretro.so", 
                "${env:HOME}/SORR/SorR.dat"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (OSX)",
            "program": "/Applications/RetroArch.app/Contents/MacOS/RetroArch",
            "args": ["-L","${workspaceFolder}/build/lib/libbennugd_libretro.dylib", 
                "${env:HOME}/Downloads/SORR/SorR.dat"],
            "cwd": "${workspaceFolder}"
        },        
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug(Windows)",
            "program": "${env:USERPROFILE}\\Downloads\\RetroArch-Win64\\retroarch.exe",
            "args": ["-L","${workspaceFolder}/build/bin/Debug/bennugd_libretro.dll", 
                "${env:USERPROFILE}\\Downloads\\SORR\\SorR.dat"],
            "cwd": "${workspaceFolder}"
        }        
    ]
}